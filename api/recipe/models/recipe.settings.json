{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "name": "recipe",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "ingredients": {
      "type": "component",
      "repeatable": true,
      "component": "recipe.ingredient",
      "required": true
    },
    "steps": {
      "type": "component",
      "repeatable": true,
      "component": "recipe.step",
      "required": true
    },
    "prep_time": {
      "type": "integer"
    },
    "cook_time": {
      "type": "integer"
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "gallery": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "total_time": {
      "type": "integer"
    },
    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "data.tag"
    },
    "yield_unit": {
      "type": "string"
    },
    "yield_amount": {
      "type": "decimal"
    },
    "blog": {
      "via": "recipe",
      "model": "blog"
    },
    "subrecipes": {
      "type": "component",
      "repeatable": true,
      "component": "recipe.subrecipe"
    },
    "portions": {
      "type": "component",
      "repeatable": true,
      "component": "recipe.portion"
    }
  }
}
